package service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import dao.ProductDAO;
import dao.UserDAO;
import vo.ProductVO;
import vo.UserVO;

@Service
public class TotalService {

	private UserDAO userDao;
	
	@Autowired
	private ProductDAO productDao;

	@Autowired
	public TotalService(UserDAO userDao) {
		this.userDao = userDao;
		System.out.println("Service 생성자 : " + userDao);
	} // end of constructor

	public List<UserVO> selectList() {
		List<UserVO> list = userDao.selectList();
		return list;
	} // end of selectList()
	
	public List<ProductVO> selectList_product(List<int[]> preorder_list){
		
		int[] preorder_idx=new int[preorder_list.size()];
		for (int i = 0; i < preorder_list.size(); i++) 
			preorder_idx[i]=preorder_list.get(i)[0];
		
		List<ProductVO> list = productDao.select_preorder_list(preorder_idx);
		return list;
	}

	public String selectOneProducerName(int producer_idx) {
			
		return productDao.selectProducerName;
	}

} // end of class
