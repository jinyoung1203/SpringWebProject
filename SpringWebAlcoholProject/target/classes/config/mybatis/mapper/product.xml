	<select id="product_typing_search" resultType="product"
		parameterType="java.lang.String">
		select * from product
		where product_name like
		'%'||#{search}||'%' or product_type like '%'||#{search}||'%'
	</select>

	<select id="product_typing_searchCount" resultType="int"
